<div id="myModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Submit a New Pin</h4>
            </div>
            <form ng-submit="savePin()" enctype="multipart/form-data">
                <div class="modal-body">
                    <h4>Image: <br/><input type="text" ng-model="newPinImage" /></h4>
                    <h4>Link: <br/><input type="text" ng-model="newPinUrl" /></h4>
                    <h4>Comments: <br/><input type="text" ng-model="newPinNotes" /></h4>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

